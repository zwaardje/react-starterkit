{
    "extends": ["tslint-config-airbnb"],
    "rules": {
        "indent": [true, "spaces", 4],
        "ter-indent": [true, 4, {"SwitchCase": 1}],
        "import-name": false,
        "max-line-length": false,
        "variable-name": [true, "allow-trailing-underscore", "allow-leading-underscore", "allow-pascal-case"]
    }
}